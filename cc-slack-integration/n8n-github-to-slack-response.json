{
  "name": "GitHub Issue Closed → Slack Response",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "github-issue-closed",
        "responseMode": "onReceived"
      },
      "name": "GitHub Webhook",
      "type": "n8n-nodes-base.webhook",
      "position": [250, 300]
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{$json.action}}",
              "operation": "equals",
              "value2": "closed"
            }
          ]
        }
      },
      "name": "Issue Closed?",
      "type": "n8n-nodes-base.if",
      "position": [450, 300]
    },
    {
      "parameters": {
        "authentication": "oAuth2",
        "owner": "={{$env.GITHUB_OWNER}}",
        "repository": "cc-task-queue",
        "issueNumber": "={{$json.issue.number}}"
      },
      "name": "Get Issue Comments",
      "type": "n8n-nodes-base.github",
      "position": [650, 200]
    },
    {
      "parameters": {
        "functionCode": "const issue = $('GitHub Webhook').item.json.issue;\nconst comments = $input.item.json;\n\n// Parse issue body to get metadata\nconst body = issue.body;\nlet channelId = '';\nlet responseUrl = '';\nlet fromUser = '';\n\nconst lines = body.split('\\n');\nfor (const line of lines) {\n  if (line.includes('**Channel:**')) {\n    channelId = line.replace('**Channel:**', '').trim();\n  }\n  if (line.includes('**Response URL:**')) {\n    responseUrl = line.replace('**Response URL:**', '').trim();\n  }\n  if (line.includes('**From:**')) {\n    fromUser = line.replace('**From:**', '').trim();\n  }\n}\n\n// Find CC's response (last comment that's not from the webhook)\nlet ccResponse = 'Task completed (no response details available)';\n\nif (comments && comments.length > 0) {\n  // Get the last comment\n  const lastComment = comments[comments.length - 1];\n  ccResponse = lastComment.body;\n}\n\nreturn {\n  json: {\n    channel_id: channelId,\n    response_url: responseUrl,\n    from_user: fromUser,\n    issue_number: issue.number,\n    issue_title: issue.title,\n    cc_response: ccResponse,\n    issue_url: issue.html_url\n  }\n};"
      },
      "name": "Parse Response Data",
      "type": "n8n-nodes-base.code",
      "position": [850, 200]
    },
    {
      "parameters": {
        "channel": "={{$json.channel_id}}",
        "text": "✅ **CC Task Complete: {{$json.issue_title}}**\n\n{{$json.cc_response}}\n\n---\n_Requested by @{{$json.from_user}}_\n[View full conversation]({{$json.issue_url}})",
        "otherOptions": {
          "icon_emoji": ":robot_face:",
          "username": "Claude Code"
        }
      },
      "name": "Send to Slack",
      "type": "n8n-nodes-base.slack",
      "position": [1050, 200]
    },
    {
      "parameters": {
        "resource": "page",
        "operation": "update",
        "pageId": {
          "__rl": true,
          "value": "={{$('GitHub Webhook').item.json.issue.number}}",
          "mode": "id"
        },
        "simple": false,
        "properties": {
          "property": [
            {
              "key": "Status|select",
              "optionValue": "✅ Applied"
            }
          ]
        }
      },
      "name": "Update Notion Status",
      "type": "n8n-nodes-base.notion",
      "position": [1050, 350]
    }
  ],
  "connections": {
    "GitHub Webhook": {
      "main": [[{"node": "Issue Closed?", "type": "main", "index": 0}]]
    },
    "Issue Closed?": {
      "main": [[{"node": "Get Issue Comments", "type": "main", "index": 0}]]
    },
    "Get Issue Comments": {
      "main": [[{"node": "Parse Response Data", "type": "main", "index": 0}]]
    },
    "Parse Response Data": {
      "main": [
        [
          {"node": "Send to Slack", "type": "main", "index": 0},
          {"node": "Update Notion Status", "type": "main", "index": 0}
        ]
      ]
    }
  },
  "settings": {
    "executionOrder": "v1"
  }
}
